int led = 3; //led se침al digital
int pot = 0; //potenciometro se침al analogica A0
int brillo;
 
void setup() {
  Serial.begin(9600);
  pinMode(led,OUTPUT);
  //los pins anal칩gicos se declaran como entrada autom치ticamente
}
 
void loop() {
  brillo = analogRead(pot) / 4; //con valores de 0 a 1023
  Serial.print("brillo: "); Serial.println(brillo);  //COMENTAR, ESTO ES SOLO PARA VER LAS SALIDAS
  analogWrite(led, brillo); //con valores de 0 a 255
}
